    <style>
        body {
            background: rgb(218, 251, 237);
            background: linear-gradient(90deg, rgba(218, 251, 237, 1) 1%, rgba(251, 249, 218, 1) 100%, rgba(233, 208, 141, 1) 100%, rgba(255, 146, 0, 1) 200%);
            scroll-behavior: smooth;
        }
        
        .nav-link {
            color: white !important;
        }
        
        .count-badge {
            position: absolute;
            top: 5px;
            right: 5px;
            font-size: 12px;
            background: red;
            color: white;
            border-radius: 50%;
            padding: 3px 7px;
        }
        
        .dropdown-item:hover {
            background-color: red;
            color: white !important;
        }
        
        .carousel-item {
            height: 100vh;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }
        
        .carousel-item.active {
            opacity: 1;
        }
        
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }
        
        .content {
            position: absolute;
            top: 60%;
            left: 50%;
            transform: translate(-50%, -40%);
            text-align: center;
            color: white;
            z-index: 10;
            width: 90%;
        }
        /* CSS Grid for Cards */
        
        #laptopGrid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            /* Responsive grid */
            gap: 10px;
            /* Less space between cards */
            justify-content: center;
            align-items: center;
            max-width: 900px;
            margin: auto;
        }
        
        .card {
            border-radius: 10px;
            background: white;
            padding: 10px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }
        
        .card:hover {
            transform: scale(1.05);
        }
        
        .rating {
            color: gold;
        }
        
        @media (max-width: 768px) {
            .content {
                top: 70%;
                transform: translate(-50%, -30%);
            }
            #laptopGrid {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                /* Smaller size on small screens */
            }
        }
        
        #productGrid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 10px;
            justify-content: center;
            max-width: 1000px;
            margin: auto;
        }
        /* Card Styling */
        
        .cardd {
            background: white;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }
        
        .cardd img {
            width: 80px;
            height: 80px;
            object-fit: contain;
        }
        
        .cardd:hover {
            transform: scale(1.05);
        }
        /* Smooth Scroll Animation */
        
        .proim {
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }
        
        .proim.visible {
            opacity: 1;
            transform: translateY(0);
        }
        /* Responsive Grid */
        
        @media (max-width: 768px) {
            #productGrid {
                grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            }
        }
        /* Light Grey-Black Background */
        
        .feature-section {
            background-color: #001c26;
            color: white;
        }
        /* Feature Box Styling */
        
        .feature-box {
            background: transparent;
            padding: 20px;
            text-align: center;
        }
        /* Circular Icons */
        
        .icon-circle {
            width: 80px;
            height: 80px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            transition: transform 0.3s ease-in-out;
        }
        
        .icon-circle i {
            font-size: 32px;
            color: #007bff;
        }
        /* Hover Effect */
        
        .feature-box:hover .icon-circle {
            transform: scale(1.1);
        }
        
        .review-container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .rating-box {
            background: linear-gradient(135deg, #0044ff, #001f99);
            color: white;
            padding: 30px;
            border-radius: 10px;
            width: 280px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        
        .rating-box h1 {
            font-size: 3rem;
            font-weight: bold;
        }
        
        .progress {
            height: 8px;
            background-color: #ddd;
        }
        
        .review-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }
        
        .review-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }
        
        .review-card img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-bottom: 10px;
        }
        
        .stars {
            color: gold;
        }
        
        .pdid .card {
            max-width: 220px;
            margin: auto;
        }
        
        .pdid img {
            height: 150px;
            object-fit: cover;
        }
        /* Notification Styling */
        
        .notification {
            position: fixed;
            top: 10px;
            right: 10px;
            background-color: #28a745;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 16px;
            display: none;
            z-index: 1000;
            animation: fadeInOut 2s ease-in-out;
        }
        /* Heart Fill Animation */
        
        .heart-fill {
            position: relative;
            overflow: hidden;
            display: inline-block;
        }
        
        .heart-fill::after {
            content: "❤️";
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            height: 100%;
            color: red;
            transition: top 0.5s ease-in-out;
        }
        
        .heart-filled.heart-fill::after {
            top: 0;
        }
        /* Notification Fade Effect */
        
        @keyframes fadeInOut {
            0% {
                opacity: 0;
                transform: translateY(-10px);
            }
            10% {
                opacity: 1;
                transform: translateY(0);
            }
            90% {
                opacity: 1;
                transform: translateY(0);
            }
            100% {
                opacity: 0;
                transform: translateY(-10px);
            }
        }
    </style>
